#define FastHoviBaby ios_base::sync_with_stdio(false), cin.tie(nullptr), cout.tie(nullptr);


int gcd(int a , int b)
{
if(b==0) return a;
a%=b;
return gcd(b,a);
}


bool isPrime(int n){
    if(n==1) return false;
    if(n==2) return true;
    for(int i=2;i*i<=n;i++){
        if(n%i==0)return false;
    }
    return true;
}

int32_t main(){
FastHoviBaby

int n,r;
cin>>n>>r;
int a[n];
rep(i,n) cin>>a[i];

    int mx=0,j=0,ans=0;
    rep(i,n-1){
        ans=a[i]-a[i+1];
        if(ans>mx){
            mx=ans;
            if(ans>r)
            j= ans-r;
        }
    }
    cout<<j;
return 0;
}
