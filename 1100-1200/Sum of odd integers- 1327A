while(t--){
    int n, k;
    cin>>n>>k;
  if(n%2==0 && k%2!=0) cout<<"NO"<<endl;
    else if(n%2!=0 && k%2==0) cout<<"NO"<<endl;
    else {if(k*k<=n) cout<<"YES"<<endl;
    else cout<<"NO"<<endl;
    }
}
return 0;
